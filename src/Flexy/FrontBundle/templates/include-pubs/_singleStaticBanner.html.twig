<div class="li-static-home">
                <div class="container simple-container">
                    <div class="row">
                        <div class="col-lg-12">
                            <!-- Begin Li's Static Home Image Area -->
                            <div style="background-image:url('/uploads/{{singleBanner.image}}'); background-position:center;" class="li-static-home-image"></div>
                            <!-- Li's Static Home Image Area End Here -->
                            <!-- Begin Li's Static Home Content Area -->
                            <div class="li-static-home-content ">


                                <p {% if singleBanner.isTextWhite %}style="color:white;"{% endif %} >{{singleBanner.petitTitre}}</p>
                                <h2 {% if singleBanner.isTextWhite %}style="color:white;"{% endif %} >{{singleBanner.grandTitre}}</h2>
                                <p class="schedule" {% if singleBanner.isTextWhite %}style="color:white;"{% endif %}>
                                    {{singleBanner.textePrix}}
                                </p>
                                <div class="default-btn">
                                    <a href="{{singleBanner.lien}}" class="links">{{singleBanner.titreBtn ? singleBanner.titreBtn:"Voir plus"}}</a>
                                </div>
                            </div>
                            <!-- Li's Static Home Content Area End Here -->
                        </div>
                    </div>
                </div>
            </div>